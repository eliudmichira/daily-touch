{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}
